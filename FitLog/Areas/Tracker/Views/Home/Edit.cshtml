@using FitLog.Areas.Tracker.ViewModels.Home
@model EditViewModel

@{
    ViewData["Title"] = "Edit day";
}

<form method="post">
    <div class="card shadow-sm border-0 mx-auto" style="border-radius:16px; max-width:950px;">
        <div class="card-body p-4">

            <h4 class="fw-bold mb-4">
                <i class="bi bi-calendar-check me-2"></i>
                @ViewData["Title"]
            </h4>

            <input type="hidden" asp-for="Id" />

            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Date" type="date" class="form-control" />
                        <label asp-for="Date">Date</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Steps" class="form-control" placeholder="Steps" />
                        <label asp-for="Steps">Steps</label>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="WorkoutCalories" class="form-control" placeholder="Workout calories" />
                        <label asp-for="WorkoutCalories">Workout calories</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="fw-semibold mb-0">
                    <i class="bi bi-egg-fried me-2"></i>Meals
                </h5>
                <button type="button" class="btn btn-fit-green btn-sm" data-modal-url="@Url.Action("AddMeal", "Home", new { area = "Tracker", dayId = Model.Id })">
                    <i class="bi bi-plus-lg"></i> Add meal
                </button>
            </div>

            <div id="meals-container">
                @for (int i = 0; i < Model.Meals.Count; i++)
                {
                    <div class="card border-0 shadow-sm mb-3 meal-item">
                        <div class="card-body p-3">
                            <div class="row g-2 align-items-start">
                                <div class="col-auto d-flex my-auto">
                                    <div class="fw-bold fs-6 meal-number text-center"
                                         style="min-width:30px;">
                                        @(@i + 1)
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-floating mb-2">
                                        <input asp-for="Meals[i].MealName" class="form-control" />
                                        <label>Meal name</label>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">

                                        <div class="d-flex flex-grow-1 gap-2">
                                            <div style="flex:1;">
                                                <div class="form-floating">
                                                    <input asp-for="Meals[i].Calories" class="form-control" />
                                                    <label>Calories</label>
                                                </div>
                                            </div>

                                            <div style="flex:1;">
                                                <div class="form-floating">
                                                    <input asp-for="Meals[i].Protein" class="form-control" />
                                                    <label>Protein</label>
                                                </div>
                                            </div>

                                            <div style="flex:1;">
                                                <div class="form-floating">
                                                    <input asp-for="Meals[i].Carbohydrates" class="form-control" />
                                                    <label>Carbs</label>
                                                </div>
                                            </div>

                                            <div style="flex:1;">
                                                <div class="form-floating">
                                                    <input asp-for="Meals[i].Fat" class="form-control" />
                                                    <label>Fat</label>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="button"
                                                class="btn btn-outline-danger flex-shrink-0">
                                            <i class="bi bi-trash"></i>
                                        </button>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancel
                </a>
                <button type="submit" class="btn btn-fit-orange">
                    <i class="bi bi-check-lg me-1"></i> Save
                </button>
            </div>

        </div>
    </div>
</form>
