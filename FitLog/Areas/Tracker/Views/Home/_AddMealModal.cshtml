@model FitLog.Areas.Tracker.ViewModels.Home.MealViewModel

@{
    var urlAction = Url.Action("AddMeal", "Home", new { area = "Tracker", dayId = Model.DailyEntryId });
}

<div class="modal fade" id="addMeamModal" tabindex="-1" aria-labelledby="addMealModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@urlAction" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="DailyEntryId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="addMealModalLabel">Add Meal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="card border-0 shadow-sm mb-3 meal-item">
                            <div class="card-body p-3">
                                <div class="row g-2 align-items-start">
                                    <div class="col">
                                        <div class="form-floating mb-2">
                                            <input asp-for="MealName" class="form-control" />
                                            <label>Meal name</label>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">

                                            <div class="d-flex flex-grow-1 gap-2">
                                                <div style="flex:1;">
                                                    <div class="form-floating">
                                                        <input asp-for="Calories" class="form-control" />
                                                        <label>Calories</label>
                                                    </div>
                                                </div>

                                                <div style="flex:1;">
                                                    <div class="form-floating">
                                                        <input asp-for="Protein" class="form-control" />
                                                        <label>Protein</label>
                                                    </div>
                                                </div>

                                                <div style="flex:1;">
                                                    <div class="form-floating">
                                                        <input asp-for="Carbohydrates" class="form-control" />
                                                        <label>Carbs</label>
                                                    </div>
                                                </div>

                                                <div style="flex:1;">
                                                    <div class="form-floating">
                                                        <input asp-for="Fat" class="form-control" />
                                                        <label>Fat</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
