@model FitLog.Areas.Tracker.ViewModels.Home.MealViewModel

<div class="col">
    <div class="form-floating mb-2">
        <input asp-for="MealName" class="form-control" />
        <label>Meal name</label>
    </div>
    <div class="d-flex align-items-center gap-2">

        <div class="d-flex flex-grow-1 gap-2">
            <div style="flex:1;">
                <div class="form-floating">
                    <input asp-for="Calories" class="form-control" />
                    <label>Calories</label>
                </div>
            </div>

            <div style="flex:1;">
                <div class="form-floating">
                    <input asp-for="Protein" class="form-control" />
                    <label>Protein</label>
                </div>
            </div>

            <div style="flex:1;">
                <div class="form-floating">
                    <input asp-for="Carbohydrates" class="form-control" />
                    <label>Carbs</label>
                </div>
            </div>

            <div style="flex:1;">
                <div class="form-floating">
                    <input asp-for="Fat" class="form-control" />
                    <label>Fat</label>
                </div>
            </div>
        </div>

        <button type="button"
                class="btn btn-outline-danger flex-shrink-0">
            <i class="bi bi-trash"></i>
        </button>

    </div>

</div>