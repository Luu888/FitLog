@using FitLog.Areas.Tracker.ViewModels.Home
@model List<IndexViewModel>

<div class="card shadow-sm border-0" style="border-radius:16px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover fit-table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Id</th>
                        @* <th>Created</th> *@
                        @* <th>Updated</th> *@
                        <th>Date</th>
                        <th>Calories</th>
                        <th>Steps</th>
                        <th>Workout calories</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="">
                                <td>@item.Id</td>
                                @* <td>@item.CreatedAt.ToString("g")</td> *@
                                @* <td>@(item.UpdatedAt?.ToString("g") ?? "")</td> *@
                                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                <td class="fw-semibold">
                                    @item.CaloriesEaten.ToString("N0")
                                </td>
                                <td>@item.Steps.ToString("N0")</td>
                                <td class="fw-semibold">
                                    @item.WorkoutCalories.ToString("N0")
                                </td>
                                <td class="text-center">
                                    <a asp-area="Tracker"
                                       asp-controller="Home"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-fit-orange"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                No records found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
