@using FitLog.Areas.Tracker.ViewModels.Home
@model List<IndexViewModel>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">Date</th>
                <th scope="col">Calories Eaten</th>
                <th scope="col">Steps</th>
                <th scope="col">Workout Calories</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    var rowClass = item.IsDeleted ? "table-danger" : "";
                    <tr class="@rowClass">
                        <td>@item.Id</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>@(item.UpdatedAt?.ToString("g") ?? "")</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@item.CaloriesEaten.ToString("N2")</td>
                        <td>@item.Steps.ToString("N0")</td>
                        <td>@item.WorkoutCalories.ToString("N2")</td>
                        <td class="text-center">
                            <a asp-area="Tracker"
                               asp-controller="Home"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary"
                               title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No records found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
